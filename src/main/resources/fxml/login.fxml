<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="640.0" prefWidth="720.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.LoginController">
   <children>
      <Label text="Login">
         <font>
            <Font size="36.0" />
         </font>
         <VBox.margin>
            <Insets bottom="120.0" top="90.0" />
         </VBox.margin>
      </Label>
      <HBox alignment="CENTER">
         <children>
            <Label fx:id="errorMessageLabel" text="Error Message" textFill="RED" visible="false" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefWidth="200.0" spacing="30.0">
         <children>
            <Label alignment="CENTER_RIGHT" minWidth="60.0" text="Username:" />
            <TextField fx:id="usernameField" promptText="Username" />
         </children>
      </HBox>
      <HBox alignment="CENTER" prefWidth="200.0" spacing="30.0">
         <children>
            <Label alignment="CENTER_RIGHT" minWidth="60.0" text="Password:" />
            <PasswordField fx:id="passwordField" promptText="Password" />
         </children>
      </HBox>
      <HBox alignment="CENTER" minHeight="36.0" spacing="30.0">
         <children>
            <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onLogin" text="Login">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefWidth="200.0" spacing="30.0">
         <children>
            <Label text="Don't have an account?" />
            <Hyperlink fx:id="createUserLink" onAction="#onCreateUser" text="Create one here!" />
         </children>
      </HBox>
   </children>
</VBox>
