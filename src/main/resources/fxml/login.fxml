                        <VBox fx:id="registerButton" alignment="CENTER" maxHeight="130.0" minWidth="105.0" onMouseClicked="#onRegister" onMouseEntered="#onProfileHover" onMouseExited="#onProfileExited" prefHeight="130.0" prefWidth="105.0">
                           <children>
                              <ImageView accessibleRole="BUTTON" fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true" styleClass="registerButton">
                                 <image>
                                    <Image url="@../images/plusSign.png" />
                                 </image>
                              </ImageView>
                              <Label styleClass="username" text="Create User" />
                           </children>
                           <HBox.margin>
                              <Insets left="10.0" />
                           </HBox.margin>
                        </VBox>
                     </children>
                     <padding>
                        <Insets left="20.0" right="20.0" />
                     </padding>
                  </HBox>
               </content>
            </ScrollPane>
            <HBox alignment="CENTER_RIGHT">
               <children>
                  <Button fx:id="musicButton" mnemonicParsing="false" onAction="#onToggleMusic" onMouseEntered="#onButtonHover" prefHeight="45.0" prefWidth="45.0" styleClass="iconButtons">
                     <graphic>
                        <ImageView fx:id="musicIcon" fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/music.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets left="20.0" right="20.0" top="-20.0" />
               </VBox.margin>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
      <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" translateX="210.0" translateY="-125.0">
         <image>
            <Image url="@../videos/penDrawing.gif" />
         </image>
      </ImageView>
   </children>
</StackPane>
