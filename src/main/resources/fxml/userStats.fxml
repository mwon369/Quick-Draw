<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.UserStatsController">
   <children>
      <ImageView pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/DoodleBackground.jpg" />
         </image>
      </ImageView>
      <VBox fx:id="userStatsVBox" alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="610.0" prefWidth="720.0" spacing="15.0">
          <children>
              <Label fx:id="statsTitleLabel" alignment="CENTER" prefHeight="52.0" prefWidth="710.0" text="Statistics" textAlignment="CENTER">
                  <font>
                      <Font name="Bradley Hand ITC" size="36.0" />
                  </font>
              </Label>
            <HBox alignment="CENTER" minHeight="36.0">
               <children>
                  <Label fx:id="userLabel" styleClass="statLabel" text="User" />
               </children>
               <VBox.margin>
                  <Insets top="-20.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="50.0">
               <children>
                  <VBox>
                     <children>
                        <HBox fx:id="pieChartHBox" alignment="CENTER">
                           <children>
                              <StackPane>
                                 <children>
                                    <PieChart fx:id="statsPieChart" labelLineLength="30.0" minHeight="-Infinity" minWidth="-Infinity" prefHeight="380.0" prefWidth="450.0">
                                       <padding>
                                          <Insets bottom="20.0" />
                                       </padding></PieChart>
                                    <Label fx:id="noGamesLabel" alignment="CENTER" contentDisplay="CENTER" maxWidth="-Infinity" prefWidth="375.0" text="You haven't played any games in either classic or hidden-word mode yet!" textAlignment="CENTER" wrapText="true">
                                       <StackPane.margin>
                                          <Insets />
                                       </StackPane.margin></Label>
                                 </children>
                              </StackPane>
                           </children>
                           <VBox.margin>
                              <Insets bottom="10.0" top="-10.0" />
                           </VBox.margin></HBox>
                     </children>
                  </VBox>
                  <VBox alignment="CENTER" spacing="20.0">
                     <children>
                        <Button fx:id="badgeViewButton" mnemonicParsing="false" onAction="#onBadgeView" onMouseEntered="#onButtonHover" prefHeight="45.0" prefWidth="45.0" styleClass="iconButtons">
                           <graphic>
                              <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../images/trophyIcon.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                        <Button fx:id="wordHistoryButton" mnemonicParsing="false" onAction="#onWordHistory" onMouseEntered="#onButtonHover" prefHeight="45.0" prefWidth="45.0" styleClass="iconButtons">
                           <graphic>
                              <ImageView fitHeight="30.0" fitWidth="30.0" pickOnBounds="true" preserveRatio="true">
                                 <image>
                                    <Image url="@../images/historyIcon.png" />
                                 </image>
                              </ImageView>
                           </graphic>
                        </Button>
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets left="50.0" />
               </padding>
            </HBox>
              <HBox alignment="CENTER" minHeight="36.0">
                  <children>
                      <Button fx:id="menuButton" mnemonicParsing="false" onAction="#onGoBackToMenu" onMouseEntered="#onButtonHover" text="Main Menu">
                          <padding>
                              <Insets bottom="5.0" left="20.0" right="20.0" top="5.0" />
                          </padding>
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                      </Button>
                  </children>
              </HBox>
          </children>
      </VBox>
   </children>
</StackPane>
