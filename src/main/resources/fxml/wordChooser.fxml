<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.WordChooserController">
    <children>
        <VBox id="sceneVBox" alignment="CENTER" maxHeight="680.0" maxWidth="760.0" prefHeight="676.0" prefWidth="760.0">
            <children>
            <HBox alignment="CENTER" prefHeight="32.0" prefWidth="760.0">
               <children>
                  <Label fx:id="titleLabel" text="Choose a word!">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
                <HBox alignment="CENTER" prefHeight="32.0" prefWidth="760.0">
               <children>
                  <Label fx:id="wordChosenLabel" text="Current word chosen: ">
                     <HBox.margin>
                        <Insets bottom="30.0" top="40.0" />
                     </HBox.margin></Label>
               </children>
                </HBox>
                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <VBox alignment="TOP_CENTER">
                            <children>
                                  <ListView fx:id="wordListView" fixedCellSize="30.0" prefHeight="424.0" prefWidth="261.0">
                                      <VBox.margin>
                                          <Insets />
                                      </VBox.margin>
                                  </ListView>
                            </children>
                        </VBox>
                    </children>
                </HBox>
                <HBox alignment="CENTER" minHeight="-Infinity" prefHeight="35.0" prefWidth="680.0" spacing="80.0">
                    <children>
                        <Button fx:id="backToGameButton" mnemonicParsing="false" onAction="#onGoBackToGame" text="Back to Game" />
                    </children>
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </HBox>

            </children>
        </VBox>
    </children>
</StackPane>
