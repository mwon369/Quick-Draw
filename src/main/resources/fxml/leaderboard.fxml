<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane style="-fx-background-color: white;" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="nz.ac.auckland.se206.LeaderBoardController">
   <children>
      <ImageView pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/DoodleBackground.jpg" />
         </image>
      </ImageView>
      <VBox id="sceneVBox" alignment="CENTER" maxHeight="680.0" maxWidth="760.0" prefHeight="676.0" prefWidth="760.0">
         <children>
            <HBox alignment="CENTER">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
               <children>
                  <Label fx:id="titleLabel" text="Fastest Time Leaderboard" textAlignment="CENTER">
                     <HBox.margin>
                        <Insets />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>
            <StackPane>
               <children>
                  <HBox alignment="CENTER">
                     <children>
                        <VBox alignment="CENTER" prefHeight="437.0" prefWidth="359.0">
                           <children>
                              <Label styleClass="leaderboardlabel" text="User" />
                              <ListView fx:id="userListView" fixedCellSize="30.0" prefHeight="420.0" prefWidth="400.0" styleClass="leaderboard" />
                           </children>
                        </VBox>
                        <VBox alignment="CENTER" prefHeight="437.0" prefWidth="158.0">
                           <children>
                              <Label fx:id="statsLabel" styleClass="leaderboardlabel" text="Time" />
                              <ListView fx:id="statsListView" fixedCellSize="30.0" prefHeight="420.0" prefWidth="101.0" styleClass="leaderboard" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </StackPane>
            <HBox alignment="CENTER" minHeight="-Infinity" prefHeight="35.0" prefWidth="680.0" spacing="80.0">
               <VBox.margin>
                  <Insets top="60.0" />
               </VBox.margin>
               <children>
                  <Button fx:id="menuButton" mnemonicParsing="false" onAction="#onMenu" onMouseEntered="#onButtonHover" text="Menu" />
                  <MenuButton fx:id="filterMenuButton" maxHeight="35.0" maxWidth="150.0" mnemonicParsing="false" prefHeight="35.0" prefWidth="50.0">
                    <items>
                      <MenuItem fx:id="fastestWinMenuItem" mnemonicParsing="false" onAction="#onShowFastestWin" styleClass="menuitem" text="Fastest Win" />
                      <MenuItem fx:id="mostWordsDrawnMenuItem" mnemonicParsing="false" onAction="#onShowMostWordsDrawn" styleClass="menuitem" text="Most Words Drawn" />
                    </items>
                     <graphic>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../images/filterIcon.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </MenuButton>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</StackPane>
